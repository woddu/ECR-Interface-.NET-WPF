<UserControl x:Class="WpfApplication1.SamplePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             
             FontFamily="Microsoft YaHei UI"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             d:DesignHeight="435" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Column="0"
            >
            <StackPanel>
                <Label Content="Search" />
                <TextBox
                    x:Name="searchBox"
                    TextChanged="SearchBox_TextChanged"
                    />
                <TextBlock
                    Text="Male"
                    />
                <ListBox 
                    x:Name="listMale"
                    SelectionChanged="listMale_SelectionChanged"
                    Height="160"     
                    />
                <TextBlock
                    Text="Female"
                    />
                <ListBox 
                    x:Name="listFemale"
                    SelectionChanged="listFemale_SelectionChanged"
                    Height="160"     
                    />
                
            </StackPanel>
        </Grid>
        <Grid
            Grid.Column="1"
            >

            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="200">
                <Label Content="Name" VerticalAlignment="Center" HorizontalAlignment="Left"  />
                <TextBox
                    x:Name="txtName"
                    Margin="0,0,0,10"/>
                <Label Content="Male"/>
                <CheckBox
                    x:Name="chkMale"
                    Margin="0,0,0,20"/>
                <Button 
                    x:Name="btnAdd"
                    Content="Add" 
                    Click="AddName_Click"/>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
