<UserControl x:Class="WpfApplication1.SamplePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             d:DesignHeight="435" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <DockPanel Margin="0,0,0,10">
                    <Image Source="/icons/search_26dp.png"
                        Width="20" Height="20"
                        Margin="4"
                        DockPanel.Dock="Left" />
                    <TextBox
                        x:Name="searchBox"
                        TextChanged="SearchBox_TextChanged"                  
                        materialDesign:HintAssist.Hint="Search Student"
                        AcceptsReturn="True"                 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Center"
                        Width="Auto" 
                        PreviewTextInput="LettersOnlyTextBox_PreviewTextInput"/>
                </DockPanel>
                
                <TextBlock Text="Male"
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignTitleMediumTextBlock}"/>
                <ListBox 
                    x:Name="listMale"
                    SelectionChanged="listMale_SelectionChanged"                  
                    Height="135"
                    />
            </StackPanel>
            <StackPanel Grid.Row="1">
                <TextBlock Text="Female"
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignTitleMediumTextBlock}"/>
                <ListBox 
                    x:Name="listFemale"
                    SelectionChanged="listFemale_SelectionChanged"                        
                    Height="135"
                    />
            </StackPanel>
        </Grid>
        <Grid
            Grid.Column="1"
            >

            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="200">
                <TextBlock 
                    Text="Add Student" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left"
                    Padding="0,16"
                    Style="{StaticResource MaterialDesignTitleLargeTextBlock}"/>
                <TextBox
                    x:Name="txtName"
                    materialDesign:HintAssist.Hint="Name"
                    AcceptsReturn="True"                 
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                    Margin="0,0,0,10"
                    PreviewTextInput="LettersOnlyTextBox_PreviewTextInput"/>
                <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,20">
                    <RadioButton
                        x:Name="rbMale"
                        Content="Male"
                        Style="{StaticResource MaterialDesignRadioButton}"
                        Tag="True"
                        IsChecked="True"
                        Margin="0,0,20,0"
                        Checked="Gender_Checked"/>
                    <RadioButton
                        x:Name="rbFemale"
                        Content="Female"
                        Style="{StaticResource MaterialDesignRadioButton}"
                        Tag="True"
                        Checked="Gender_Checked"/>
                </StackPanel>
                <Button 
                    x:Name="btnAdd"
                    Content="Add" 
                    Click="AddName_Click"/>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
