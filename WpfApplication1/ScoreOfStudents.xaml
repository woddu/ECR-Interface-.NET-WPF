<UserControl x:Class="WpfApplication1.ScoreOfStudents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer
            Grid.Column="0"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Search bar -->
                <DockPanel Margin="0,0,0,10">
                    <Image Source="/icons/search_26dp.png"
                        Width="20" Height="20"
                        Margin="4"
                        DockPanel.Dock="Left" />
                    <TextBox
                        x:Name="searchBox"
                        TextChanged="SearchBox_TextChanged"                  
                        materialDesign:HintAssist.Hint="Search Student"
                        AcceptsReturn="True"                 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Center"
                        Width="Auto" 
                        PreviewTextInput="LettersOnlyTextBox_PreviewTextInput"/>
                </DockPanel>

                <!-- Male students -->
                <TextBlock Text="Male Students" FontWeight="Bold" Margin="5"/>
                <ItemsControl ItemsSource="{Binding MaleStudentsView}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <TextBlock Text="{Binding Name}" Width="100"/>
                                <TextBox Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}" 
                                         Width="50"
                                         TextChanged="MaleStudentScoreTextChanged"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Female students -->
                <TextBlock Text="Female Students" FontWeight="Bold" Margin="5"/>
                <ItemsControl ItemsSource="{Binding FemaleStudentsView}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <TextBlock Text="{Binding Name}" Width="100"/>
                                <TextBox Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}" 
                                         Width="50"
                                         TextChanged="FemaleStudentScoreTextChanged"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        <StackPanel
            Grid.Column="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <TextBlock
                    x:Name="tbWrittenWorks"
                    Text="Written Works" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left"
                    Padding="0,16"
                    Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                    TextWrapping="Wrap"/>
            <Button x:Name="btnSaveScores" 
                Content="Save"
                IsEnabled="False"
                Width="85"
                Click="SaveScores_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
