<UserControl x:Class="WpfApplication1.ScoreOfStudents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer
            Grid.Column="0"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Search bar -->
                <DockPanel Margin="0,0,0,10"
                    >
                    <Image Source="/icons/search_26dp.png"
                        Width="20" Height="20"
                        Margin="4"
                        DockPanel.Dock="Left" />

                    <Image Source="/icons/close_26dp.png"
                        x:Name="btnClear"
                        Width="20" Height="20"
                        Margin="4"
                        MouseLeftButtonUp="ClearSearch_Click"
                        Cursor="Hand"
                        DockPanel.Dock="Right" />
                        
                    <TextBox x:Name="searchBox"
                        TextChanged="SearchBox_TextChanged"
                        materialDesign:HintAssist.Hint="Search Student"
                        AcceptsReturn="True"
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"
                        PreviewTextInput="LettersOnlyTextBox_PreviewTextInput"/>

                    
                </DockPanel>

                <!-- Male students -->
                <TextBlock  Text="Male Students" 
                            Style="{StaticResource MaterialDesignTitleMediumTextBlock}"
                            FontWeight="Black"
                            Margin="5"/>
                <ItemsControl ItemsSource="{Binding MaleStudentsView}"
                    AlternationCount="1000">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" >
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <!-- Name column -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- Score column -->
                                </Grid.ColumnDefinitions>

                                <!-- First column: Name -->
                                <TextBlock Text="{Binding Name}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"/>

                                <!-- Second column: Score -->
                                <TextBox Grid.Column="1"
                                    Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}" 
                                    materialDesign:HintAssist.Hint="Score"
                                    AcceptsReturn="True"                 
                                    Style="{StaticResource MaterialDesignFilledTextBox}"
                                    TextWrapping="Wrap"
                                    Width="70"
                                    PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                                    MaxLength="2"
                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"                                        
                                    TextChanged="MaleStudentScoreTextChanged"
                                    LostFocus="MaleStudentScore_LostFocus"
                                    PreviewKeyDown="MaleStudentScore_PreviewKeyDown"
                                    Tag="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter}, 
                                    Path=(ItemsControl.AlternationIndex)}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


                <!-- Female students -->
                <TextBlock Text="Female Students" 
                           Style="{StaticResource MaterialDesignTitleMediumTextBlock}"
                           FontWeight="Black"
                           Margin="5,15,5,5"/>
                <ItemsControl ItemsSource="{Binding FemaleStudentsView}"
                    AlternationCount="1000">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" >
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <!-- Name column -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- Score column -->
                                    </Grid.ColumnDefinitions>

                                    <!-- First column: Name -->
                                    <TextBlock Text="{Binding Name}"
                                        VerticalAlignment="Center"
                                        Margin="0,0,8,0"/>

                                    <!-- Second column: Score -->
                                    <TextBox Grid.Column="1"
                                        Text="{Binding Score, UpdateSourceTrigger=PropertyChanged}" 
                                        materialDesign:HintAssist.Hint="Score"
                                        AcceptsReturn="True"                 
                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                        TextWrapping="Wrap"
                                        Width="70"
                                        PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                                        MaxLength="2"
                                        materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"                                        
                                        TextChanged="FemaleStudentScoreTextChanged"
                                        LostFocus="FemaleStudentScore_LostFocus"
                                        PreviewKeyDown="FemaleStudentScore_PreviewKeyDown"
                                        Tag="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter}, 
                                        Path=(ItemsControl.AlternationIndex)}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        <StackPanel
            Grid.Column="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">
            <TextBlock
                    x:Name="tbType"                    
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left"
                    Padding="0,16"
                    Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                    TextWrapping="Wrap"/>
            <TextBlock
                x:Name="tbHighestScore"                    
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                Padding="0,16"
                Style="{StaticResource MaterialDesignTitleMediumTextBlock}"
                TextWrapping="Wrap"/>
            <Button x:Name="btnSaveScores" 
                Content="Save"
                IsEnabled="False"
                Width="85"
                Click="SaveScores_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
