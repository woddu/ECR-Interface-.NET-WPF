<UserControl x:Class="WpfApplication1.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d"
             d:DesignHeight="435" d:DesignWidth="1000">

    <Grid>

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock 
                x:Name="FileName"
                VerticalAlignment="Center"
                Margin="0,0,0,20"
                Style="{StaticResource MaterialDesignHeadlineMediumTextBlock}"/>
            <ComboBox
                x:Name="cBoxTracks"
                SelectedIndex="0"
                Margin="0,0,0,20">
                <ComboBoxItem
                    Content="Core Subject (All Tracks)" />
                <ComboBoxItem
                    Content="Academic Track (except Immersion)" />
                <ComboBoxItem
                    Content="Work Immersion/ Culminating Activity (for Academic Track)" />
                <ComboBoxItem
                    Content="TVL/ Sports/ Arts and Design Track" />
            </ComboBox>
            <StackPanel 
                Orientation="Horizontal"
                Margin="0,0,0,25"
                x:Name="spQuarter">
                <TextBlock
                    VerticalAlignment="Center"
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignLabelLargeTextBlock}"
                    Text="Quarter:" />
                <RadioButton
                    x:Name="rbtn1st"
                    Margin="0,0,10,0"
                    Content="1st"
                    Style="{StaticResource MaterialDesignRadioButton}"
                    IsChecked="True"
                    Checked="Change_Quarter"
                    Tag="True"/>
                <RadioButton
                    x:Name="rbtn2nd"
                    Content="2nd"
                    Style="{StaticResource MaterialDesignRadioButton}"
                    IsChecked="False"
                    Checked="Change_Quarter"
                    Tag="False"/>
            </StackPanel>
            <Button 
                x:Name="btnChooseFile"
                materialDesign:ButtonAssist.CornerRadius="25"
                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                materialDesign:ButtonProgressAssist.Value="-1"
                Height="50"
                Style="{StaticResource MaterialDesignRaisedDarkButton}"
                Click="ChooseFile_Click">
                <TextBlock Text="Choose an Excel File" 
                    VerticalAlignment="Center"
                    Style="{StaticResource MaterialDesignLabelLargeTextBlock}"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
