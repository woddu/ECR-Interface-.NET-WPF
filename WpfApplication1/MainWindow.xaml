<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStartupLocation="CenterScreen"
        FontSize="14"
        FontFamily="Microsoft YaHei UI"
        Icon="pack://application:,,,/icons/appico.ico"
        Title="MainWindow" Height="500" Width="1000">
    <materialDesign:DialogHost x:Name="RootDialog" CloseOnClickAway="True">

        <!-- Dialog Content -->
        <materialDesign:DialogHost.DialogContent>
            <StackPanel Margin="20" Width="300">
                <StackPanel 
                Orientation="Horizontal"                    
                Margin="0,0,0,10">

                    <materialDesign:PackIcon Kind="AlertCircle" Foreground="Red" Width="32" Height="32"/>
                    <TextBlock x:Name="ErrorTitle"
                    Text="Error"
                    FontSize="20"
                    Foreground="Red"
                    FontWeight="Bold"
                    Margin="10,0,0,0"/>
                </StackPanel>
                <TextBlock x:Name="ErrorDescription"
                Text="Something went wrong while processing your request."
                TextWrapping="Wrap"
                Margin="0,0,0,20"/>
                <Button Content="OK"
                IsDefault="True"
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}"/>
            </StackPanel>
        </materialDesign:DialogHost.DialogContent>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50
                           "/>
                <!-- Sidebar -->
                <RowDefinition Height="*"/>
                <!-- Content -->
            </Grid.RowDefinitions>

            <!-- Sidebar -->
            <Grid
            Background="#004C9A" 
            Grid.Row="0"
            >
                <DockPanel 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
                    <ProgressBar x:Name="MyProgressBar" DockPanel.Dock="Bottom" IsIndeterminate="True" />
                    <StackPanel
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <RadioButton x:Name="rbtnFile"
                        Margin="4"
                        Content="File"
                        IsChecked="True"
                        Checked="Tab_Checked"
                        Style="{StaticResource MaterialDesignTabRadioButton}" 
                        FontSize="18"
                        Cursor="Hand"
                        Foreground="White"/>
                        <RadioButton x:Name="rbtnScores"
                        Margin="4"
                        Content="Scores"
                        IsEnabled="False"
                        Checked="Tab_Checked"
                        Style="{StaticResource MaterialDesignTabRadioButton}" 
                        FontSize="18"
                        Cursor="Hand"
                        Foreground="White"/>
                        <RadioButton x:Name="rbtnStudents"
                        Margin="4"
                        Content="Students"
                        IsEnabled="False"
                        Checked="Tab_Checked"         
                        Style="{StaticResource MaterialDesignTabRadioButton}" 
                        FontSize="18"
                        Cursor="Hand"
                        Foreground="White"
                        Click="StudentsPage_CLiked"/>
                    </StackPanel>
                    
                </DockPanel>
            </Grid>

            <!-- Content Area -->
            <ContentControl x:Name="MainContent" 
                        Grid.Row="1" Margin="0,0,0,15"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        />
            
        </Grid>
    </materialDesign:DialogHost>
</Window>
