<UserControl x:Class="WpfApplication1.HighestScores"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d"
             FontFamily="Microsoft YaHei UI"
             d:DesignHeight="450" d:DesignWidth="1000">
    <UserControl.Resources>
        <local:IndexToQuizLabelConverter x:Key="IndexToQuizLabelConverter" />
        <local:IndexToActivityLabelConverter x:Key="IndexToActivityLabelConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="10" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="215" />
                <RowDefinition Height="215" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <!-- First row -->
            <ItemsControl
                Grid.Row="0"
                Grid.Column="0"
                AlternationCount="1000"
                Height="215"
                ItemsSource="{Binding WrittenWorks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Horizontal"
                            VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="5">
                            <TextBlock Text="{Binding
                                RelativeSource={RelativeSource Mode=FindAncestor,
                                                                  AncestorType=ContentPresenter},
                                Path=(ItemsControl.AlternationIndex),
                                Converter={StaticResource IndexToQuizLabelConverter}}"
                                Margin="5"/>
                            <TextBox Text="{Binding ., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Margin="5" Width="45"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                >
                
            </StackPanel>
            
            <!-- Second row -->
            <ItemsControl
                Grid.Row="1"
                Grid.Column="0"
                AlternationCount="1000"
                Height="215"
                ItemsSource="{Binding PerformanceTasks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            VerticalAlignment="Top"
                            Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="5">
                            <TextBlock Text="{Binding
                                RelativeSource={RelativeSource Mode=FindAncestor,
                                                                  AncestorType=ContentPresenter},
                                Path=(ItemsControl.AlternationIndex),
                                Converter={StaticResource IndexToActivityLabelConverter}}"
                                Margin="5"/>
                            <TextBox Text="{Binding ., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="5" Width="65"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                >

            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
