<UserControl x:Class="WpfApplication1.HighestScores"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             FontFamily="Microsoft YaHei UI"
             d:DesignHeight="430" d:DesignWidth="1000">
    <UserControl.Resources>
        <local:IndexToQuizLabelConverter x:Key="IndexToQuizLabelConverter" />
        <local:IndexToActivityLabelConverter x:Key="IndexToActivityLabelConverter" />
        <local:ScoreToEnabledConverter x:Key="ScoreToEnabledConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid  Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!-- First row -->
            <ItemsControl
                x:Name="itemsControlWrittenWorks"
                Grid.Row="0"
                Grid.Column="1"
                AlternationCount="1000"
                Margin="4"
                ItemsSource="{Binding WrittenWorks}">   

                <!-- Change ItemsPanel to UniformGrid -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="2" Columns="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray"
                                BorderThickness="1,0,1,1">
                            <StackPanel Orientation="Vertical" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Margin="5"
                                    >
                                <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                                    <Button Content="{Binding
                                        RelativeSource={RelativeSource Mode=FindAncestor,
                                                                    AncestorType=ContentPresenter},
                                        Path=(ItemsControl.AlternationIndex),
                                        Converter={StaticResource IndexToActivityLabelConverter}}"
                                        ToolTip="{Binding
                                        RelativeSource={RelativeSource Mode=FindAncestor,
                                                                    AncestorType=ContentPresenter},
                                        Path=(ItemsControl.AlternationIndex),
                                        Converter={StaticResource IndexToActivityLabelConverter},
                                        StringFormat='View Scores of WW {0}'}"/>

                                </StackPanel>
                                <TextBox
                                    Tag="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter}, 
                                            Path=(ItemsControl.AlternationIndex)}"
                                    Text="{Binding ., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    VerticalAlignment="Top"
                                    materialDesign:HintAssist.Hint="Score"
                                    AcceptsReturn="True"                 
                                    Style="{StaticResource MaterialDesignFilledTextBox}"
                                    TextWrapping="Wrap"
                                    Width="70"
                                    PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                                    MaxLength="2"
                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                                    TextChanged="WrittenScoresTextChanged"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                <TextBlock
                    x:Name="tbWrittenWorks"
                    Text="Written Works" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left"
                    Padding="0,16"
                    Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                    TextWrapping="Wrap"/>
                <!--<TextBox x:Name="txtWrittenWork"
                    MaxWidth="400"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Add Score"
                    AcceptsReturn="True"                 
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                    TextWrapping="Wrap" 
                    Margin="10,0,10,15"
                    PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                    MaxLength="2"
                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                -->
                <Button x:Name="btnSaveWrittenWorks" 
                        Content="Save"
                        IsEnabled="False"
                        Width="85"
                        Click="SaveWrittenWorks_Click"/>
            </StackPanel>
            
            <!-- Second row -->
            <ItemsControl
                x:Name="itemsControlPerformanceTasks"
                Grid.Row="1"
                Grid.Column="1"
                AlternationCount="1000"
                Padding="4"
                ItemsSource="{Binding PerformanceTasks}">       

                <!-- Change ItemsPanel to UniformGrid -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="2" Columns="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray"
                                BorderThickness="1,0,1,1">
                            <StackPanel Orientation="Vertical" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Margin="5">
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                    <Button Content="{Binding
                                          RelativeSource={RelativeSource Mode=FindAncestor,
                                                                        AncestorType=ContentPresenter},
                                          Path=(ItemsControl.AlternationIndex),
                                          Converter={StaticResource IndexToActivityLabelConverter}}"                                        
                                        IsEnabled="{Binding ., Converter={StaticResource ScoreToEnabledConverter}}"
                                        ToolTip="{Binding
                                        RelativeSource={RelativeSource Mode=FindAncestor,
                                                                    AncestorType=ContentPresenter},
                                        Path=(ItemsControl.AlternationIndex),
                                        Converter={StaticResource IndexToActivityLabelConverter},
                                        StringFormat='View Scores of PT {0}'}"/>

                                </StackPanel>
                                <TextBox
                                    Tag="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter}, 
                                        Path=(ItemsControl.AlternationIndex)}"
                                    Text="{Binding ., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    VerticalAlignment="Top"
                                    materialDesign:HintAssist.Hint="Score"
                                    AcceptsReturn="True"                 
                                    Style="{StaticResource MaterialDesignFilledTextBox}"
                                    TextWrapping="Wrap"
                                    Width="70"
                                    PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                                    MaxLength="2"
                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                                    TextChanged="PerformanceScoresTextChanged"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                <TextBlock
                    x:Name="tbPerformanceTasks"
                    Text="Performance Tasks" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Left"
                    Padding="0,16"
                    Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                    TextWrapping="Wrap"/>
                <!--<TextBox x:Name="txtPerformanceTask"
                        MaxWidth="400"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="Add Score"
                        AcceptsReturn="True"                 
                        Style="{StaticResource MaterialDesignFilledTextBox}"
                        TextWrapping="Wrap"
                        Margin="0,0,0,15"
                        PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                        MaxLength="2"
                        materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"/>
                -->
                <Button x:Name="btnSavePerformanceTasks" 
                        Content="Save"
                        IsEnabled="False"
                        Width="85"
                        Click="SavePerformanceTasks_Click"/>
            </StackPanel>

        </Grid>
        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock
                x:Name="tbExam"
                Text="Exam" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Left"
                Padding="0,16"
                Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                TextWrapping="Wrap"/>
            <TextBox
                x:Name="txtExam"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Score"
                AcceptsReturn="True"                 
                Style="{StaticResource MaterialDesignFilledTextBox}"
                TextWrapping="Wrap"
                Width="70"
                PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                MaxLength="2"
                materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                TextChanged="ExamTextChanged"
                Margin="0,0,0,30"/>
            <Button x:Name="btnSaveExam" 
                Content="Save"
                IsEnabled="False"
                Width="85"
                Click="SaveExam_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
