<UserControl x:Class="WpfApplication1.StudentDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             
             FontFamily="Microsoft YaHei UI"
             d:DesignHeight="435" d:DesignWidth="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                
                <Label x:Name="lblName" 
                        Content="Name"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,30"/>

                <Label Content="Exam"
                        HorizontalAlignment="Center"/>
                <Label x:Name="lblExam"
                        Content="Exam"
                        Margin="0,0,0,5"
                        HorizontalAlignment="Center"/>
            </StackPanel>

        </Grid>
        <Grid Margin="10" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ItemsControl
                Grid.Row="0"
                AlternationCount="1000"
                ItemsSource="{Binding WrittenWorks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Horizontal"
                            VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBox 
                                Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Width="45"/>
                            <TextBlock 
                                Text="{Binding Label, StringFormat={}/{0}}"
                                Width="35"
                                Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Second row -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <ItemsControl
                    Grid.Column="0"
                    AlternationCount="1000"
                    ItemsSource="{Binding PerformanceTasks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel
                                VerticalAlignment="Top"
                                Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBox 
                                    Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="45"/>
                                <TextBlock 
                                    Text="{Binding Label, StringFormat={}/{0}}"
                                    Width="35"
                                    Margin="5"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center">

                    <Button
                        x:Name="btnSave"
                        Content="Save"
                        Padding="20,10"
                        />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
