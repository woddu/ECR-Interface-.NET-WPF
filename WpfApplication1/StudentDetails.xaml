<UserControl x:Class="WpfApplication1.StudentDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d" 
             
             FontFamily="Microsoft YaHei UI"
             d:DesignHeight="435" d:DesignWidth="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
                
                <Label x:Name="lblName" 
                        Content="Name"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,30"/>

                <Label Content="Exam"
                        HorizontalAlignment="Center"/>
                <Label x:Name="lblExam"
                        Content="Exam"
                        Margin="0,0,0,5"
                        HorizontalAlignment="Center"/>
            </StackPanel>

        </Grid>
        <Grid Margin="10" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3.5*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <ItemsControl
                    Grid.Column="0"
                    AlternationCount="1000"
                    ItemsSource="{Binding WrittenWorks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="2" Columns="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" 
                                    VerticalAlignment="Center"
                                    Margin="2">
                            <TextBox 
                                Tag="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter}, 
                                    Path=(ItemsControl.AlternationIndex)}"
                                Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                VerticalAlignment="Top"
                                materialDesign:HintAssist.Hint="Score"
                                AcceptsReturn="True"                 
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                TextWrapping="Wrap"
                                Width="60"
                                PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                                MaxLength="2"
                                materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                                TextChanged="WrittenScoresTextChanged"/>
                            <TextBlock 
                                Text="{Binding Label, StringFormat={}/{0}}"
                                VerticalAlignment="Center"
                                Width="35"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
                <DockPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    LastChildFill="False">
                    <TextBlock 
                        Text="Written Works" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        Padding="0,16"
                        Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                        TextWrapping="Wrap"
                        Margin="0,10,0,0"
                        DockPanel.Dock="Top"/>
                    <Button
                        x:Name="btnSaveWrittenWorks"
                        Content="Save"
                        DockPanel.Dock="Bottom"
                        Width="85"
                        IsEnabled="False"/>
            </DockPanel>
        </Grid>

        <!-- Second row -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3.5*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <ItemsControl
                    Grid.Column="0"
                    AlternationCount="1000"
                    ItemsSource="{Binding PerformanceTasks}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="2" Columns="5"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Margin="2">
                                <TextBox 
                                    Tag="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ContentPresenter}, 
                                        Path=(ItemsControl.AlternationIndex)}"
                                    Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    VerticalAlignment="Top"
                                    materialDesign:HintAssist.Hint="Score"
                                    AcceptsReturn="True"                 
                                    Style="{StaticResource MaterialDesignFilledTextBox}"
                                    TextWrapping="Wrap"
                                    Width="60"
                                    PreviewTextInput="NumberOnlyTextBox_PreviewTextInput"
                                    MaxLength="2"
                                    materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"
                                    TextChanged="PerformanceScoresTextChanged"/>
                                <TextBlock 
                                    Text="{Binding Label, StringFormat={}/{0}}"
                                    VerticalAlignment="Center"
                                    Width="35"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <DockPanel
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    LastChildFill="False">
                    <TextBlock 
                        Text="Performance Task" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Left"
                        Padding="0,16"
                        Style="{StaticResource MaterialDesignTitleLargeTextBlock}"
                        TextWrapping="Wrap"
                        Margin="0,10,0,0"
                        DockPanel.Dock="Top"/>
                    <Button
                        x:Name="btnSavePerformanceTasks"
                        Content="Save"
                        DockPanel.Dock="Bottom"
                        Width="85"
                        IsEnabled="False"/>
                </DockPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
